<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Thème principal de l'application, basé sur MaterialComponents Light, sans barre d'action -->
    <style name="Theme.QuizMaster" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Couleurs principales -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Couleur secondaire pour accent -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Couleur du fond général -->
        <item name="android:windowBackground">@color/white</item>

        <!-- Personnalisation typographie et ripple -->
        <item name="rippleColor">@color/colorPrimary</item>

        <!-- Barre de statut et navigation -->
        <item name="android:statusBarColor">@color/purple_700</item>
        <item name="android:navigationBarColor">@color/purple_700</item>
    </style>

</resources>
