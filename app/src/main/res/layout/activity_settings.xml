<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EBF5EC">

    <LinearLayout
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Paramètre"
            android:background="#68A062"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:padding="12dp"
            android:gravity="center"/>

        <!-- Section Compte -->
        <TextView
            android:text="Compte"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <include layout="@layout/settings_item_list"/>

        <!-- Ajout cliquable "Changer de profil" -->
        <LinearLayout
            android:id="@+id/layoutChangerProfil"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="?attr/selectableItemBackground"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:layout_marginTop="8dp"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Changer de profil"
                android:textSize="16sp"
                android:textColor="#000"/>
        </LinearLayout>

        <!-- Section Préférences -->
        <TextView
            android:text="Préférences"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <include layout="@layout/preferences_item_list"/>

        <!-- Ajout cliquable "Notifications" -->
        <LinearLayout
            android:id="@+id/layoutNotifications"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="?attr/selectableItemBackground"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:layout_marginTop="8dp"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Notifications"
                android:textSize="16sp"
                android:textColor="#000"/>
        </LinearLayout>

        <!-- Ajout cliquable "Son" -->
        <LinearLayout
            android:id="@+id/layoutSon"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="?attr/selectableItemBackground"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:layout_marginTop="8dp"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Son"
                android:textSize="16sp"
                android:textColor="#000"/>
        </LinearLayout>

        <!-- Section À propos -->
        <TextView
            android:text="A propos"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <include layout="@layout/about_item_list"/>

        <!-- Ajout cliquable "Licence" -->
        <LinearLayout
            android:id="@+id/layoutLicence"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="?attr/selectableItemBackground"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:layout_marginTop="8dp"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Licence"
                android:textSize="16sp"
                android:textColor="#000"/>
        </LinearLayout>

        <!-- Boutons -->
        <Button
            android:id="@+id/buttonChangerCompte"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Changer de compte"
            android:layout_marginTop="24dp"/>

        <Button
            android:id="@+id/bouttondec"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Déconnexion"
            android:layout_marginTop="8dp"/>
    </LinearLayout>
</ScrollView>
