<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Bouton retour -->
        <ImageButton
            android:id="@+id/buttonBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Retour" />

        <!-- Titre -->
        <TextView
            android:id="@+id/textViewTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Changer de compte"
            android:textStyle="bold"
            android:textSize="22sp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="24dp" />

        <!-- Liste compte 1 -->
        <LinearLayout
            android:id="@+id/account1Layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/profil" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="12dp">

                <TextView
                    android:id="@+id/account1Name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Alice Brunel"
                    android:textSize="16sp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/account1Email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="aliceb@gmail.com"
                    android:textSize="14sp"
                    android:textColor="#666666" />
            </LinearLayout>

            <Button
                android:id="@+id/buttonLoginAccount1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Se connecter"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Liste compte 2 -->
        <LinearLayout
            android:id="@+id/account2Layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:gravity="center_vertical"
            android:layout_marginBottom="40dp">

            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/profil" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="12dp">

                <TextView
                    android:id="@+id/account2Name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sesse Boris"
                    android:textSize="16sp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/account2Email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="boris@gmail.com"
                    android:textSize="14sp"
                    android:textColor="#666666" />
            </LinearLayout>

            <Button
                android:id="@+id/buttonLoginAccount2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Se connecter"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Bouton ajouter un compte -->
        <Button
            android:id="@+id/buttonAddAccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ajouter un nouveau de compte"
            android:layout_gravity="center"
            android:background="#95a19b"
            android:layout_marginTop="8dp"/>

    </LinearLayout>
</ScrollView>