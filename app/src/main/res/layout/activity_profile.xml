<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#EBF5EC"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Profil"
        android:background="#68A062"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:textSize="24sp"
        android:padding="12dp"/>

    <!-- Photo de profil avec forme ronde -->
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imageProfile"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:layout_marginTop="24dp"
        android:src="@drawable/profil"
        android:background="#000000"
        android:scaleType="centerInside"
        android:clickable="true"
        android:focusable="true" />

    <!-- Nom de l'utilisateur -->
    <TextView
        android:id="@+id/userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alice Brunel"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        android:layout_gravity="center"/>

    <!-- Email de l'utilisateur -->
    <TextView
        android:id="@+id/userEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aliceb@gmail.com"
        android:textSize="14sp"
        android:textColor="#888888"
        android:layout_marginTop="8dp"
        android:layout_gravity="center"/>

    <!-- Score total -->
    <TextView
        android:id="@+id/scoreTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Score total : 0"
        android:gravity="center"
        android:padding="16dp"
        android:textSize="16sp"
        android:layout_marginTop="16dp"
        android:background="#DDDDDD"/>

    <!-- Affichage des scores de chaque matière -->
    <TextView
        android:id="@+id/scoreMaths"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mathématiques : 0"
        android:padding="16dp"
        android:textSize="16sp"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/scoreHistoire"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Histoire : 0"
        android:padding="16dp"
        android:textSize="16sp"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/scoreSVT"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SVT : 0"
        android:padding="16dp"
        android:textSize="16sp"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/scoreFrançais"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Français : 0"
        android:padding="16dp"
        android:textSize="16sp"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/scoreAnglais"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Anglais : 0"
        android:padding="16dp"
        android:textSize="16sp"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/scorePhysique"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Physique : 0"
        android:padding="16dp"
        android:textSize="16sp"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/scoreChimie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chimie : 0"
        android:padding="16dp"
        android:textSize="16sp"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/scoreGeo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Géographie : 0"
        android:padding="16dp"
        android:textSize="16sp"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/scorePhilosophie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Philosophie : 0"
        android:padding="16dp"
        android:textSize="16sp"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/scoreEconomie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Economie : 0"
        android:padding="16dp"
        android:textSize="16sp"
        android:layout_marginTop="8dp"/>
</LinearLayout>
